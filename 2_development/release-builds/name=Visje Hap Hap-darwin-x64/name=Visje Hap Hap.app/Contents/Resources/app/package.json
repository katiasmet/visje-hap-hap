{
  "scripts": {
    "start": "electron ./main.js",
    "install": "electron-rebuild",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/images/osx/icon.icns --prune=true --out=release-builds name=\"Visje Hap Hap\"",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/images/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Visje Hap Hap\""
  },
  "dependencies": {
    "electron": "^1.4.5",
    "electron-packager": "^8.3.0",
    "johnny-five": "^0.10.5"
  },
  "devDependencies": {
    "electron-rebuild": "^1.3.0"
  }
}
